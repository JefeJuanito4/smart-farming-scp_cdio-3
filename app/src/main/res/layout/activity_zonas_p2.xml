<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZonasP2Activity">

    <Button
        android:id="@+id/botonZona22"
        android:layout_width="148dp"
        android:layout_height="90dp"
        android:text="ZONA 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonZona21"
        app:layout_constraintVertical_bias="0.15"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/botonZona23"
        android:layout_width="148dp"
        android:layout_height="90dp"
        android:layout_marginBottom="172dp"
        android:text="ZONA 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonZona22"
        app:layout_constraintVertical_bias="0.666"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/botonZona21"
        android:layout_width="148dp"
        android:layout_height="90dp"
        android:text="ZONA 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.269" />

    <TextView
        android:id="@+id/txtzonas2"
        android:layout_width="91dp"
        android:layout_height="66dp"
        android:text="ZONAS"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <ImageButton
        android:id="@+id/botonmasP2"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="#34A515"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@drawable/add"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>