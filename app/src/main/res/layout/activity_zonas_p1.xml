<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZonasP1Activity">

    <ImageButton
        android:id="@+id/botonmasP1"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:background="@drawable/button_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@drawable/add"
        tools:ignore="SpeakableTextPresentCheck"
        tools:visibility="visible" />

    <Button
        android:id="@+id/botonZona12"
        android:layout_width="148dp"
        android:layout_height="90dp"
        android:layout_marginBottom="320dp"
        android:background="@drawable/button_rounded_border"
        android:text="ZONA 2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonZona11"
        app:layout_constraintVertical_bias="0.633"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/botonZona13"
        android:layout_width="148dp"
        android:layout_height="90dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/button_rounded_border"
        android:text="ZONA 3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonZona12"
        app:layout_constraintVertical_bias="0.573"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/botonZona11"
        android:layout_width="148dp"
        android:layout_height="90dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/button_rounded_border"
        android:text="ZONA 1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtzonas"
        android:layout_width="91dp"
        android:layout_height="66dp"
        android:text="ZONAS"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/button_rounded"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

</androidx.constraintlayout.widget.ConstraintLayout>